# Test environment configuration
# This file is used for running integration tests with real PostgreSQL

# Application settings
APP_TITLE="Enterprise FastAPI Application - Test"
APP_DESCRIPTION="A production-ready FastAPI application with PostgreSQL - Test Environment"
APP_VERSION="1.0.0"
ENVIRONMENT="testing"
DEBUG="true"

# Use real database for integration tests
USE_MOCK_DB="false"

# Test Database configuration (using test database port)
DB_HOST="localhost"
DB_PORT="5433"
DB_NAME="fastapi_test_db"
DB_USER="postgres"
DB_PASSWORD="password"

# Database connection pool settings (smaller for testing)
DB_POOL_SIZE="5"
DB_MAX_OVERFLOW="10"
DB_POOL_TIMEOUT="30"
DB_POOL_RECYCLE="3600"

# Logging configuration
LOG_LEVEL="DEBUG"
LOG_FORMAT="json"
LOG_INCLUDE_REQUEST_ID="true"

# Security configuration
CORS_ORIGINS="*"
CORS_METHODS="GET,POST,PUT,DELETE,OPTIONS"
CORS_HEADERS="*"

# Rate limiting (more relaxed for testing)
RATE_LIMIT_REQUESTS="1000"
RATE_LIMIT_WINDOW="60"