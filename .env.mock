# Mock database environment configuration
# This file is used for unit tests with mock database

# Application settings
APP_TITLE="Enterprise FastAPI Application - Mock"
APP_DESCRIPTION="A production-ready FastAPI application with PostgreSQL - Mock Environment"
APP_VERSION="1.0.0"
ENVIRONMENT="testing"
DEBUG="true"

# Use mock database for unit tests
USE_MOCK_DB="true"

# Database configuration (not used with mock, but kept for completeness)
DB_HOST="localhost"
DB_PORT="5432"
DB_NAME="fastapi_db"
DB_USER="postgres"
DB_PASSWORD="password"

# Database connection pool settings
DB_POOL_SIZE="20"
DB_MAX_OVERFLOW="30"
DB_POOL_TIMEOUT="30"
DB_POOL_RECYCLE="3600"

# Logging configuration
LOG_LEVEL="DEBUG"
LOG_FORMAT="json"
LOG_INCLUDE_REQUEST_ID="true"

# Security configuration
CORS_ORIGINS="*"
CORS_METHODS="GET,POST,PUT,DELETE,OPTIONS"
CORS_HEADERS="*"

# Rate limiting
RATE_LIMIT_REQUESTS="1000"
RATE_LIMIT_WINDOW="60"